// Search match with exact case insensitive no of line After and befor rows 
grep -win -C "dost" file1
//search in all files in current directory
grep -win -C "dost" ./*
// Recusive search in sub directories 
grep -winr "dost" .
// returns file names those contain string 
grep -wirl "dost" .
// returns file names those contain string with no of ocurrence 
grep -wirc "dost" .
// Narrow down the search use pip sign 
history | grep "dost" | grep "dotfile"
// this will return match expression of any sequence of no with dash or phone no 
grep "...-...-..."
